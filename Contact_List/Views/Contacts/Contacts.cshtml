@model Contact_List.ViewModels.ContactsViewModel

<div>
    @Html.ActionLink("Create", "CreateNewContact", null, new { @class= "btn btn-primary" })
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Html.LabelFor(m => m.Contacts.First().Name)</th>
            <th>@Html.LabelFor(m => m.Contacts.First().Surname)</th>
            <th>@Html.LabelFor(m => m.Contacts.First().Phone)</th>
            <th>@Html.LabelFor(m => m.Contacts.First().Email)</th>
        </tr>
    </thead>
    @foreach (var item in Model.Contacts)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Surname
            </td>
            <td>
                @item.Phone
            </td>
            <td>
                @item.Email
            </td>
        </tr>
    }
</table>